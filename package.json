{
  "name": "@good-food/utils",
  "version": "1.0.0",
  "description": "Shared utilities library for Good Food microservices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth.middleware.js",
      "types": "./dist/auth.middleware.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "lint": "eslint src/",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "good-food",
    "utils",
    "middleware",
    "auth",
    "jwt"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/good-food/utils.git"
  },
  "peerDependencies": {
    "elysia": ">=1.0.0"
  },
  "dependencies": {
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "elysia": "^1.0.0",
    "typescript": "^5.3.0"
  }
}